{
  "name": "gitcopilot-memory",
  "version": "1.0.0",
  "type": "module",
  "description": "GitHub Copilot MCP server with memory management, automatic tool registration, and intelligent project initialization",
  "main": "dist/server/MCPServer.js",
  "bin": {
    "gitcopilot-memory": "./dist/server/MCPServer.js"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/server/MCPServer.js && echo '{\"type\": \"module\"}' > dist/package.json",
    "dev": "tsc --watch",
    "start": "node dist/server/MCPServer.js",
    "test": "npm run test:unit",
    "test:unit": "jest --config jest.unit.config.js",
    "test:unit:watch": "jest --config jest.unit.config.js --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:performance": "jest --config jest.performance.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "npm run test:unit -- --coverage && npm run test:integration -- --coverage",
    "test:ci": "npm run test:all && npm run test:performance",
    "test:full": "node scripts/run-all-tests.js",
    "test:mcp": "echo '{\"jsonrpc\":\"2.0\",\"method\":\"tools/list\",\"id\":1}' | node dist/server/index.js",
    "test:mcp:tools": "echo '{\"jsonrpc\":\"2.0\",\"method\":\"tools/call\",\"params\":{\"name\":\"get_memory_stats\",\"arguments\":{}},\"id\":1}' | node dist/server/index.js",
    "validate:config": "node validate-config.js",
    "clean": "rimraf dist coverage .nyc_output test-reports performance-reports",
    "clean:test": "rimraf coverage tests/fixtures/temp test-reports performance-reports",
    "prepare": "npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs:lint": "markdownlint \"*.md\" \"docs/**/*.md\" \"examples/**/*.md\" \".github/**/*.md\" --ignore node_modules --ignore .copilot",
    "docs:test": "node scripts/docs/test-examples.js",
    "docs:validate": "node scripts/docs/validate-docs.js && node scripts/docs/check-structure.js",
    "docs:links": "node scripts/docs/check-links.js",
    "docs:links:internal": "node scripts/docs/check-links.js --no-external",
    "docs:structure": "node scripts/docs/check-structure.js",
    "docs:fix": "npm run docs:lint -- --fix",
    "docs:full": "npm run docs:validate && npm run docs:test && npm run docs:links:internal",
    "docs:validate:all": "node scripts/docs/validate-all.js",
    "docs:validate:fast": "node scripts/docs/validate-all.js --skip-external --skip-examples",
    "pretest": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "github-copilot",
    "ai",
    "typescript",
    "memory-system",
    "project-initialization"
  ],
  "author": "Copilot MCP Toolset",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "better-sqlite3": "^9.6.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "level": "^8.0.1",
    "markdown-it": "^14.0.0",
    "reflect-metadata": "^0.2.2",
    "simple-git": "^3.20.0",
    "yaml": "^2.3.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "markdownlint-cli": "^0.45.0",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/copilot-mcp/toolset"
  },
  "bugs": {
    "url": "https://github.com/copilot-mcp/toolset/issues"
  },
  "homepage": "https://github.com/copilot-mcp/toolset#readme"
}
