{
  // MCP Configuration for any MCP server
  "mcp.servers": "./mcp.json",
  "mcp.enableDebugLogging": false,
  "mcp.autoReconnect": true,
  "mcp.connectionTimeout": 10000,
  "mcp.requestTimeout": 30000,

  // Copilot + MCP Integration
  "copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },

  // Generic MCP tooling settings
  "copilotMCP.autoInitialize": true,
  "copilotMCP.enableMemorySystem": true,
  "copilotMCP.defaultMode": "general",
  "copilotMCP.enableNotifications": true,
  "copilotMCP.debugMode": false,

  // Cross-platform storage paths (customize for your OS)
  "copilotMCP.storagePaths": {
    "globalConfig": "${env:HOME}/.local/share/mcp",
    "cache": "${env:HOME}/.cache/mcp",
    "logs": "${env:HOME}/.local/share/mcp/logs"
  },

  // Performance settings
  "copilotMCP.performance": {
    "enableCaching": true,
    "maxConcurrentRequests": 10,
    "enableCompression": true
  }
}