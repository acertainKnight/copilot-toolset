{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MCP Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/path/to/your/server.js",
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "restart": true,
      "protocol": "inspector"
    },
    {
      "name": "MCP Inspector",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/mcp-inspector",
      "args": ["${workspaceFolder}/path/to/your/server.js"],
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug MCP Protocol",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/path/to/your/server.js",
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "trace",
        "DEBUG_PROTOCOL": "true",
        "DEBUG_JSONRPC": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    },
    {
      "name": "Attach to Running MCP Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}